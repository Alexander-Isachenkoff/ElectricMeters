                        <JsonColumn alignment="CENTER_RIGHT" dataType="REAL" field="T_20" prefWidth="75.0" text="20:00-21:00" />
                        <JsonColumn alignment="CENTER_RIGHT" dataType="REAL" field="T_21" prefWidth="75.0" text="21:00-22:00" />
