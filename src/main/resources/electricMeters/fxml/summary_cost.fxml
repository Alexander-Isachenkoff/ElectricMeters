<?import javafx.scene.layout.VBox?>

<VBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="724.0" spacing="12.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="electricMeters.view.SummaryCostController">
   <children>
      <GridPane hgap="8.0" vgap="1.0">
         <rowConstraints>
            <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES" />
            <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES" />
            <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label text="Год" GridPane.columnIndex="1" />
            <Label text="Месяц" />
            <MonthComboBox fx:id="monthCmb" prefWidth="120.0" GridPane.rowIndex="2" />
            <ComboBox fx:id="yearCmb" prefWidth="90.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Button mnemonicParsing="false" onAction="#onApply" text="Применить" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <Button mnemonicParsing="false" onAction="#onExport" text="Экспорт" GridPane.columnIndex="3" GridPane.rowIndex="2" />
         </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" />
         </columnConstraints>
      </GridPane>
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <TableHeader table="${table}" title="Стоимость" />
            <StackPane VBox.vgrow="ALWAYS">
               <children>
                  <JsonTable fx:id="table" sqlFile="SummaryCost.sql">
                     <columns>
