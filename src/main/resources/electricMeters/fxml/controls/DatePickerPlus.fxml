<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<fx:root stylesheets="@../../css/style.css" type="AnchorPane" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <DatePicker prefWidth="125" fx:id="datePicker" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
        <StackPane prefWidth="27.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="27.0" AnchorPane.topAnchor="0.0">
            <children>
                <Text fx:id="requiredSign" fill="RED" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="!">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Text>
                <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clear" styleClass="clear-button">
                    <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../icons/close.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </StackPane>
    </children>
</fx:root>
