<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<fx:root prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/style.css" type="VBox"
         xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <HBox alignment="CENTER_LEFT" style="-fx-background-color: lightgray;">
        <Label fx:id="titleLabel" text="Заголовок" textFill="#181818">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <HBox alignment="CENTER_RIGHT" spacing="4.0" HBox.hgrow="ALWAYS">
            <children>
                <Button fx:id="addButton" style="-fx-padding: 4;" styleClass="tool-button">
                    <graphic>
                        <Group>
                            <children>
                                <Line endY="10.0" layoutX="5.0" styleClass="line"/>
                                <Line endX="10.0" layoutY="5.0" styleClass="line"/>
                            </children>
                        </Group>
                    </graphic>
                </Button>
                <Button fx:id="deleteButton" prefHeight="20.0" prefWidth="20.0" style="-fx-padding: 4;"
                        styleClass="tool-button">
                    <graphic>
                        <Group>
                            <children>
                                <Line endX="10.0" layoutY="5.0" styleClass="line"/>
                            </children>
                        </Group>
                    </graphic>
                </Button>
            </children>
        </HBox>
        <padding>
            <Insets bottom="4.0" left="8.0" right="4.0" top="4.0"/>
        </padding>
    </HBox>
</fx:root>
